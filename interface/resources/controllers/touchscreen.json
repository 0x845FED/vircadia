        { "from": "Touchscreen.GesturePinchIn", "to": "Actions.BoomIn", "filters": [ { "type": "scale", "scale": 0.02 } ] },
		
        { "from": { "makeAxis" : [
                [ "Touchscreen.DragLeft" ],
